{
  "manifest_version": 3,
  "name": "Citation Cross-Reference with AI",
  "version": "1.1.0",
  "description": "Enhanced citation detection using AI for better educational content analysis on YouTube",
  
  "permissions": [
    "activeTab",
    "storage"
  ],
  
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://www.googleapis.com/*",
    "http://localhost:*"
  ],
  
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["working-content.js"],
      "run_at": "document_idle"
    }
  ],
  
  "background": {
    "service_worker": "background/background.js"
  },
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Citation Cross-Reference"
  }
} 